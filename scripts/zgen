#!/usr/bin/env bash

URL="https://github.com/tarjoilija/zgen.git"
REPO="$HOME/.zgen"

# Check if git is installed
if ! command -v git >/dev/null 2>&1; then
    echo "âŒ Error: Git is not installed. Cannot proceed."
    exit 1
fi

# Install or update zgen
if [ ! -d "$REPO" ]; then
    echo "ðŸ“¦ Installing zgen..."
    git clone "$URL" "$REPO"
else
    echo "ðŸ”„ Updating zgen..."
    cd "$REPO" || { echo "âŒ Error: Cannot access $REPO"; exit 1; }
    git pull
    cd - >/dev/null 2>&1  # Return to the previous directory silently
fi

echo "âœ… zgen is ready!"
